{
  "manifest_version": 3,
  "name": "Quiz Extension",
  "version": "1.0",
  "description": "YT Quiz Generator",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.jpg",
      "48": "icon.jpg",
      "128": "icon.jpg"
    }
  }
}
